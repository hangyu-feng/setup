#!/usr/bin/env python3
import sys
import qrcode

def print_qr_from_file(file_path):
    try:
        with open(file_path, "r") as f:
            data = f.read().strip()
    except FileNotFoundError:
        print(f"‚ùå Error: File not found: {file_path}")
        sys.exit(1)

    # Create QR object
    qr = qrcode.QRCode(
        version=None,
        error_correction=qrcode.constants.ERROR_CORRECT_L,
        box_size=1,
        border=1,
    )
    qr.add_data(data)
    qr.make(fit=True)

    # Print compact QR code in terminal
    qr.print_ascii(invert=True)

if __name__ == "__main__":
    if len(sys.argv) != 2:
        print(f"Usage: {sys.executable} {sys.argv[0]} <path_to_config_file>")
        sys.exit(1)

    print_qr_from_file(sys.argv[1])

